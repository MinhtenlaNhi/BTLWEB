extends ../../layouts/auth.pug
include ../../mixins/box-alert

block main 
    - if(messages.error)
        +alert-error(messages.error)
    .container.my-5
        .row.justify-content-center
            .col-8  
                h1.text-center Đăng nhập  
                form(method="POST" action=`${prefixAdmin}/auth/login`)

                    .form-group 
                        label(for="email") Email 
                        input(type="email" class="form-control" id="email" name="email" )
                    
                    .form-group 
                        label(for="password") Mật khẩu 
                        input(type="password" class="form-control" id="password" name="password" )    
                    .form-group 
                        button(type="submit" class="form-control btn btn-primary d-block") Đăng nhập