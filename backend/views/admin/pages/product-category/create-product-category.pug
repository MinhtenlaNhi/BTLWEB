extends ../../layouts/default.pug
include ../../mixins/box-tree.pug

block main
    - if(messages.error)
        +alert-error(messages.error)
    .product-categories
        h1 Thêm mới danh mục
        form(id="form-create-product-category" method="POST" action=`${prefixAdmin}/product-category/create-post` enctype="multipart/form-data" runat="server")
            .form-group
                label(for="title") Tiêu đề
                input(type="text" class="form-control" id="title" name="title"  value="" required)
            
            .form-group
                label(for="title") Danh mục cha
                //- input(type="text" class="form-control" id="parentId" name="parentId"  value="")

                select(class="form-control" id="parentId" name="parentId")
                    option(value="" selected) -- Chọn danh mục cha --
                    +box-tree(data)

            .form-group
                label(for="description") Mô tả
                textarea(class="form-control" id="description" rows="3" name="description"  value="" required) 
            
            div(class="form-group" upload-image)
                label(for="thumbnail") Ảnh
                input(upload-image-input type="file" class="form-control" name="thumbnail" accept="image/*" value="")
                img(id="thumbnail-preview" src="" alt="" class="upload-image-preview")
                
                //- img(upload-image-preview src="" class="upload-image-preview")
            .form-group
                label(for="position") Vị trí
                input(type="number" class="form-control" id="position" name="position" placeholder="Tự động tăng"  value="")
            
            .form-check.d-inline-block.mr-3.my-3
                input(class="form-check-input" type="radio" name="status" id="status" value="active" checked)
                
                label(class="form-check-label" for="status") Hoạt động
                
            .form-check.d-inline-block.mr-3.my-3
                input(class="form-check-input" type="radio" name="status" id="status" value="inactive")
                
                label(class="form-check-label" for="status") Dừng hoạt động
            

            button(type="submit" class="btn btn-primary d-block") +Thêm mới

