mixin box-tree(data,level = 1,parentId = "")
    - const prefix = new Array(level + 1).join('-- ');
    each item in data
        option(value=item.id selected=item.id === parentId ? true : false) #{prefix} #{item.title}
        if(item.children && item.children.length > 0)
            +box-tree(item.children,level + 1)